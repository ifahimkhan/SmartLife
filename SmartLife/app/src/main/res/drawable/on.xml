<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="03dip" android:color="#a8a8a8" />
            <gradient android:angle="-90" android:startColor="#0f3d0f" android:endColor="#1e7b1e"  />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="02dip" android:color="#a8a8a8" />
            <gradient android:angle="90" android:startColor="#bdff00" android:endColor="#2fc357" />
        </shape>
    </item>

</selector>