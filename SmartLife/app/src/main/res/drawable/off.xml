<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="03dip" android:color="#a8a8a8" />
            <gradient android:angle="90" android:startColor="#660000" android:endColor="#990000" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="02dip" android:color="#a8a8a8" />
            <gradient android:angle="-90" android:startColor="#ff1a1a" android:endColor="#ff8080" />
        </shape>
    </item>

</selector>